{
  "name": "vu-meter-react",
  "private": false,
  "version": "0.1.0",
  "description": "React VU Meter component (React 16+ to 19).",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "scripts": {
    "dev": "vite --config example/vite.config.ts",
    "build": "tsc -b && vite build",
    "test": "vitest run",
    "docs": "typedoc",
    "start": "vite --config example/vite.config.ts",
    "example:dev": "vite --config example/vite.config.ts",
    "example:preview": "vite preview --config example/vite.config.ts",
    "preexample:dev": "npm install --no-audit --no-fund"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jun-murakami/vu-meter-react.git"
  },
  "homepage": "https://jun-murakami.com/",
  "bugs": {
    "url": "https://github.com/jun-murakami/vu-meter-react/issues"
  },
  "engines": {
    "node": ">=18"
  }
}
