{
  "name": "vu-meter-react",
  "private": false,
  "version": "0.1.0",
  "description": "React VU Meter component (React 16+ to 19).",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "scripts": {
    "dev": "vite --config example/vite.config.ts",
    "build": "tsc -b && vite build",
    "test": "vitest run",
    "docs": "typedoc",
    "start": "vite --config example/vite.config.ts",
    "example:dev": "vite --config example/vite.config.ts",
    "example:preview": "vite preview --config example/vite.config.ts",
    "preexample:dev": "npm install --no-audit --no-fund"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "jsdom": "^26.1.0",
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "vite": "^7.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "typescript": "~5.9.2",
    "@biomejs/biome": "2.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jun-murakami/vu-meter-react.git"
  },
  "homepage": "https://jun-murakami.com/",
  "bugs": {
    "url": "https://github.com/jun-murakami/vu-meter-react/issues"
  },
  "engines": {
    "node": ">=18"
  }
}
